      piece = i
      $pieces_arr.push(piece)
      if piece % 3 == 0 
        puts "|_#{piece}_|"
      else print "|_#{piece}_|" end
      i += 1
    end
  end
  def player_pick(pick)
    $pick = pick
  end
  def new_board 
    x = 1
    for piece in $new_arr
      if x % 3 == 0 
        puts "|_#{piece}_|"
      else print "|_#{piece}_|" end
        x += 1
    end
    $pieces_arr = $new_arr
  end
end

